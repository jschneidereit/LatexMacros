% Set notation.
%
% #1 elements
%
\newcommand*{\set}[1]{\ensuremath{\setl\,#1\,\setr}}
\newcommand*{\setl}{\lbrace}
\newcommand*{\setr}{\rbrace}

% Set builder notation.
%
% #1 element
% #2 predicate
%
\newcommand*{\setm}[2]{\set{#1\mid#2}}

% Generator notation.
%
% #1 generators
%
\newcommand*{\gen}[1]{\ensuremath{\genl\,#1\,\genr}}
\newcommand*{\genl}{\langle}
\newcommand*{\genr}{\rangle}

% Presentation notation.
%
% #1 generators
% #2 identities
%
\newcommand*{\genm}[2]{\gen{#1\mid#2}}
