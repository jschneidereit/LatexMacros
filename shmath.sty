% A collection of commonly used LaTeX macros for writing math.

\ProvidesPackage{mymath}

% TODO: edit required packages
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{latexsym}
%\RequirePackage{eufrak}
%\RequirePackage{eucal}

% theorems
\theoremstyle{definition}
\newtheorem{shthm}{Theorem}[section]
\newtheorem{shlem}[amsthm]{Lemma}
\newtheorem{shdef}[amsthm]{Definition}
\theoremstyle{remark}
\newtheorem*{shrem}{Remark}
\newtheorem*{shexl}{Example}

% qed symbol
\renewcommand\qedsymbol{\ensuremath{\blacksquare}}

% math operators
\DeclareMathOperator{\Forall}{\forall}
\DeclareMathOperator{\Exists}{\exists}
\DeclareMathOperator{\Not}{\lnot}
%\DeclareMathOperator{\im}{im}
\DeclareMathOperator{\dom}{dom}
\DeclareMathOperator{\cod}{co-dom}

% length for delimiter separation
\newlength{\dlen}
\setlength{\dlen}{1pt}

% delimiter separation
\newcommand*{\dsep}{\hspace{\dlength}}

% Set notation.
%
% #1 elements
%
\newcommand*{\set}[1]{\ensuremath{\setl\dsep#1\dsep\setr}}
\newcommand*{\setl}{\lbrace}
\newcommand*{\setr}{\rbrace}

% Set builder notation.
%
% #1 element
% #2 predicate
%
\newcommand*{\setb}[2]{\set{#1\mid#2}}

% Generator notation.
%
% #1 generators
%
\newcommand*{\gen}[1]{\ensuremath{\genl\dsep#1\dsep\genr}}
\newcommand*{\genl}{\langle}
\newcommand*{\genr}{\rangle}

% Presentation notation.
%
% #1 generators
% #2 identities
%
\newcommand*{\genb}[2]{\gen{#1\mid#2}}
