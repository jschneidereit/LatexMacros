% theorems
\theoremstyle{definition}
\newtheorem{shthm}{Theorem}[section]
\newtheorem{shlem}[amsthm]{Lemma}
\newtheorem{shdef}[amsthm]{Definition}
\theoremstyle{remark}
\newtheorem*{shrem}{Remark}
\newtheorem*{shexl}{Example}

% qed symbol
\renewcommand\qedsymbol{\ensuremath{\blacksquare}}

% math operators
\DeclareMathOperator{\Forall}{\forall}
\DeclareMathOperator{\Exists}{\exists}
\DeclareMathOperator{\Not}{\lnot}
%\DeclareMathOperator{\im}{im}
\DeclareMathOperator{\dom}{dom}
\DeclareMathOperator{\cod}{co-dom}

% TODO: add more operators

% Ensure math mode.
%
% #1 content
%
%\newcommand{\OB}[1]{\ensuremath{#1}}
\def\OB#1{\ifmmode#1\else\mbox{$#1$}\fi}

% Set notation.
%
% #1 elements
%
\newcommand{\shset}[1]{\OB{\lbrace\,#1\,\rbrace}}

% Set builder notation.
%
% #1 element
% #2 predicate
%
\newcommand{\shsetb}[2]{\shset{#1\mid#2}}

% Generator notation.
%
% #1 generators
%
\newcommand{\shgen}[1]{\OB{\langle\,#1\,\rangle}}

% Presentation notation.
%
% #1 element
% #2 predicate
%
\newcommand{\shgenb}[2]{\shgen{#1\mid#2}}

