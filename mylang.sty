% A collection of commonly used LaTeX macros for writing programming languages.

\ProvidesPackage{mylang}

% TODO: edit required packages
\RequirePackage{mathpartir}
\RequirePackage{stmaryrd}

% Semantics function.
\newcommand{\mysem}[2][{}]{\ensuremath{\myseml#2\mysemr_{#1}}}
\newcommand{\myseml}{\llbracket}
\newcommand{\mysemr}{\rrbracket}

% Syntax / grammar.
\newenvironment{mysyn}
  {\[\begin{array}{rcl@{\quad}l}}
  {\end{array}\]\ignorespacesafterend}

% Substitution.
%
% #1 variable
% #2 term
% #3 scope
%
\newcommand{\mysub}[3]{\ensuremath{[#2/#1]\,#3}}

% Evaluation relation.
%
% #1 left hand side
% #2 right hand side
%
\newcommand{\myeval}[2]{\ensuremath{#1 \longmapsto #2}}

% Reflexive, transitive closure of evaluation relation.
%
% #1 left hand side
% #2 right hand side
%
\newcommand{\mystar}[2]{\ensuremath{#1 \overset{\ast}{\longmapsto} #2}}

% Typing relation.
%
% #1 context
% #2 term
% #3 type
%
\newcommand{\mytype}[3]{\ensuremath{#1\,\vdash\,#2:#3}}

% Lambda abstraction.
%
% #1 bound variable(s)
% #2 type annotation
% #3 body
%
\newcommand{\myabs}[3]{\ensuremath{\lambda\,#1:#2\,.\,#3}}

% Function application.
%
% #1 left term
% #2 right term
%
\newcommand{\myapp}[2]{\ensuremath{#1\;#2}}
